@page "/createRequest"

<MudTabs Elevation="25" Rounded="true" ApplyEffectsToContainer="true" PanelClass="pa-6">
    <MudTabPanel Text="Выбор тарифа" >
        <MudText>Форма тарифа</MudText>
    </MudTabPanel>
    <MudTabPanel Text="Данные организации" Icon="@Icons.Filled.NavigateNext">
        <MudText>Данные организации</MudText>
    </MudTabPanel>
    <MudTabPanel Text="Данные владельца" Icon="@Icons.Filled.NavigateNext">
        <MudCard Elevation="25">
            <MudCardHeader>
                <CardHeaderContent>
                    <MudText Typo="Typo.h6">Данные владельца</MudText>
                </CardHeaderContent>
            </MudCardHeader>
            <MudCardContent>
                <MudTextField @bind-Value="_person.LastName" Label="LastName" Variant="Variant.Text" Margin="Margin.Normal"></MudTextField>
                <MudTextField @bind-Value="_person.FirstName" Label="FirstName" Variant="Variant.Text" Margin="Margin.Normal"></MudTextField>
                <MudTextField @bind-Value="_person.Patronymic" Label="Patronymic" Variant="Variant.Text" Margin="Margin.Normal"></MudTextField>
                <MudTextField @bind-Value="_person.BithPlace" Label="BithPlace" Variant="Variant.Text" Margin="Margin.Normal"></MudTextField>
                <MudDatePicker Label="BithDate" @bind-Date="_person.BithDate" Margin="Margin.Normal"/>
                <MudTextField @bind-Value="_person.Сitizenship" Label="Сitizenship" Variant="Variant.Text" Margin="Margin.Normal"></MudTextField>
                <MudTextField @bind-Value="_person.PassportSeries" Label="PassportSeries" Variant="Variant.Text" Margin="Margin.Normal"></MudTextField>
                <MudTextField @bind-Value="_person.PassportNumber" Label="PassportNumber" Variant="Variant.Text" Margin="Margin.Normal"></MudTextField>
                <MudDatePicker Label="PassportDate" @bind-Date="_person.PassportDate" Margin="Margin.Normal"/>
                <MudTextField @bind-Value="_person.PassportAddon" Label="PassportAddon" Variant="Variant.Text" Margin="Margin.Normal"></MudTextField>
                <MudTextField @bind-Value="_person.PassportUnit" Label="PassportUnit" Variant="Variant.Text" Margin="Margin.Normal"></MudTextField>
                <MudTextField @bind-Value="_person.Inn" Label="Inn" Variant="Variant.Text" Margin="Margin.Normal"></MudTextField>
                <MudTextField @bind-Value="_person.Snils" Label="Snils" Variant="Variant.Text" Margin="Margin.Normal"></MudTextField>
                <MudTextField @bind-Value="_person.Email" Label="Email" Variant="Variant.Text" Margin="Margin.Normal"></MudTextField>
                <MudTextField @bind-Value="_person.MobileTelephone" Label="MobileTelephone" Variant="Variant.Text" Margin="Margin.Normal"></MudTextField>
                <MudNumericField @bind-Value="_person.GenderId" Label="GenderId" Variant="Variant.Text" Min="1" Max="2" />
                <br />
                <MudButton Variant="Variant.Filled" Color="Color.Success" OnClick="Create">Создать</MudButton> 
            </MudCardContent>
        </MudCard>
    </MudTabPanel>
</MudTabs>




